<UserControl x:Class="taskmaker_wpf.Views.TargetsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:taskmaker_wpf.Views"
             xmlns:m="clr-namespace:taskmaker_wpf.Model.Data"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             xmlns:viewmodels="clr-namespace:taskmaker_wpf.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:TargetsPanelViewModel}"
             mc:Ignorable="d" 
             xmlns:prism="http://prismlibrary.com/"
             d:DesignHeight="450" d:DesignWidth="200">
    <UserControl.Resources>
        <local:ISelectableTargetConverter
            x:Key="SelectableTargetConverter" />


        <DataTemplate
            x:Key="motorControlPanel"
            DataType="{x:Type m:Motor}">
            <Grid
                Margin="0, 4, 0, 4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="{Binding Name}"
                    />
                <Slider
                    x:Name="slider"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    LargeChange="1000"
                    SmallChange="100"
                    VerticalAlignment="Center"
                    Value="{Binding Value}"
                    Maximum="{Binding Max}"
                    Minimum="{Binding Min}"
                    IsSnapToTickEnabled="True"
                    TickFrequency="1"
                    />
                <TextBox
                    Grid.Column="4"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="40"
                    Text="{Binding ElementName=slider, Path=Value, Mode=TwoWay}" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <StackPanel
            Orientation="Vertical">

            <Grid
                Margin="0, 4, 0, 4"
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="Targets" />
                <ComboBox
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="2, 0, 2, 0"
                    Text="Select --Targets--"
                    IsEditable="True"
                    IsReadOnly="True"
                    ItemsSource="{Binding ValidTargets}">
                    <d:ComboBox.SelectedIndex>
                        0
                    </d:ComboBox.SelectedIndex>
                    <d:ComboBox.ItemsSource>
                        <x:Array Type="{x:Type sys:Object}">
                            <m:Motor Name="S0" Value="100" Max="10000" Min="-10000"/>
                            <m:Motor Name="S1" Value="100" Max="10000" Min="-10000"/>
                            <m:Motor Name="S2" Value="100" Max="10000" Min="-10000"/>
                            <m:Motor Name="S3" Value="100" Max="10000" Min="-10000"/>
                        </x:Array>
                    </d:ComboBox.ItemsSource>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Orientation="Horizontal">
                                <CheckBox 
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding Path=IsSelected}"/>
                                <TextBlock
                                    Margin="10 0 0 0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Converter={StaticResource SelectableTargetConverter}, Path=Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button
                    Grid.Column="2"
                    Content="Update"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Command="{Binding UpdateCommand}"
                    />
            </Grid>

            <ItemsControl 
                Margin="0, 4, 0, 4"
                ItemsSource="{Binding UiTargets}"
                ItemTemplate="{StaticResource motorControlPanel}">
                <d:ItemsControl.ItemsSource>
                    <x:Array Type="{x:Type sys:Object}">
                        <m:Motor Name="S0" Value="100" Max="10000" Min="-10000"/>
                        <m:Motor Name="S1" Value="100" Max="10000" Min="-10000"/>
                        <m:Motor Name="S2" Value="100" Max="10000" Min="-10000"/>
                        <m:Motor Name="S3" Value="100" Max="10000" Min="-10000"/>
                    </x:Array>
                </d:ItemsControl.ItemsSource>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
