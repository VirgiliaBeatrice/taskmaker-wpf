<UserControl x:Class="taskmaker_wpf.Views.TargetsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:taskmaker_wpf.Views"
             xmlns:domain="clr-namespace:taskmaker_wpf.Domain"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             xmlns:viewmodels="clr-namespace:taskmaker_wpf.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:TargetsPanelViewModel}"
             mc:Ignorable="d" 
             xmlns:prism="http://prismlibrary.com/"
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.Resources>
        <local:ISelectableTargetConverter
            x:Key="SelectableTargetConverter" />

        <Style TargetType="{x:Type Button}">
            <Setter Property="IsEnabled" Value="True" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Parent.MapState}" Value="{x:Null}">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <DataTemplate
            x:Key="motorControlPanel"
            DataType="{x:Type viewmodels:MotorTargetState}">
            <Grid
                Margin="0, 4, 0, 4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="{Binding Name}"
                    />
                <Slider
                    x:Name="slider"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    LargeChange="1000"
                    SmallChange="100"
                    VerticalAlignment="Center"
                    Value="{Binding MotorValue, Mode=TwoWay}"
                    Maximum="{Binding Max}"
                    Minimum="{Binding Min}"
                    IsSnapToTickEnabled="True"
                    TickFrequency="1"
                    >
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="ValueChanged">
                            <b:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:TargetsPanel}}, Path=DataContext.UpdateMotorCommand}" CommandParameter="{Binding Id}"/>
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </Slider>
                <TextBox
                    Grid.Column="4"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="40"
                    Text="{Binding ElementName=slider, Path=Value, Mode=TwoWay}"
                    KeyDown="OnKeyDown">
                </TextBox>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <StackPanel
            Orientation="Vertical">

            <Grid
                Margin="0, 4, 0, 4"
                >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Content="Maps" />
                <!--
                <Label
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="2, 0, 2, 0"
                    Content="{Binding Parent.MapState}"
                    >
                    <Label.Style>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Background" Value="White" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Parent.MapState}" Value="{x:Null}">
                                    <Setter Property="Background" Value="DarkGray" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>
                -->
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="2, 0, 2, 0"
                    ItemsSource="{Binding Parent.Maps}" 
                    SelectedItem="{Binding Parent.MapState, Mode=TwoWay}"
                    >
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="ValueChanged">
                        </b:EventTrigger>
                    </b:Interaction.Triggers>

                </ComboBox>
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Content="Update"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Margin="2"
                    Command="{Binding UpdateCommand}"
                    CommandParameter="UpdateInputs"
                    >
                    <!--
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="Click">
                            <b:CallMethodAction MethodName="InvalidateMap" TargetObject="{Binding}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                    -->
                </Button>

                <Label
                    HorizontalAlignment="Center"
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Inputs" />
                <ComboBox 
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="2"
                    ItemsSource="{Binding InputPorts}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Orientation="Horizontal">
                                <CheckBox 
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding Path=IsSelected}"/>
                                <TextBlock
                                    Margin="10 0 0 0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Path=Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    
                </ComboBox>
                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Content="Add"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Margin="2"
                    Style="{x:Null}"
                    Command="{Binding AddCommand}"
                    />
                
                <Label
                    HorizontalAlignment="Center"
                    Grid.Column="0"
                    Grid.Row="2"
                    Content="Outputs" />
                <ComboBox
                    Grid.Row="2"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    Margin="2, 0, 2, 0"
                    IsReadOnly="True"
                    ItemsSource="{Binding OutputPorts}">
                    <!--
                    <d:ComboBox.SelectedIndex>
                        0
                    </d:ComboBox.SelectedIndex>
                    <d:ComboBox.ItemsSource>
                        <x:Array Type="{x:Type sys:Object}">
                            <viewmodels:MotorTargetState Name="S0" MotorValue="100" Max="10000" Min="-10000"/>
                            <viewmodels:MotorTargetState Name="S1" MotorValue="100" Max="10000" Min="-10000"/>
                            <viewmodels:MotorTargetState Name="S2" MotorValue="100" Max="10000" Min="-10000"/>
                            <viewmodels:MotorTargetState Name="S3" MotorValue="100" Max="10000" Min="-10000"/>
                        </x:Array>
                    </d:ComboBox.ItemsSource>
                    -->
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Orientation="Horizontal">
                                <CheckBox 
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding Path=IsSelected}"/>
                                <TextBlock
                                    Margin="10 0 0 0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Path=Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Content="Update"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Command="{Binding UpdateCommand}"
                    CommandParameter="UpdateOutputs"
                    Margin="2"
                    />

                <Button 
                    Grid.Row="3"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"
                    Margin="2"
                    Content="Initialize"
                    Width="60"
                    Command="{Binding UpdateCommand}"
                    CommandParameter="Initialize"
                    />
            </Grid>

            <ItemsControl 
                Margin="0, 4, 0, 4"
                ItemsSource="{Binding TargetsOfSelectedMap}"
                ItemTemplate="{StaticResource motorControlPanel}">
                <d:ItemsControl.ItemsSource>
                    <x:Array Type="{x:Type sys:Object}">
                        <viewmodels:MotorTargetState Name="S0" MotorValue="100" Max="10000" Min="-10000"/>
                        <viewmodels:MotorTargetState Name="S1" MotorValue="100" Max="10000" Min="-10000"/>
                        <viewmodels:MotorTargetState Name="S2" MotorValue="100" Max="10000" Min="-10000"/>
                        <viewmodels:MotorTargetState Name="S3" MotorValue="100" Max="10000" Min="-10000"/>
                    </x:Array>
                </d:ItemsControl.ItemsSource>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
