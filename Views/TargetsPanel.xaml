<UserControl x:Class="taskmaker_wpf.Views.TargetsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:taskmaker_wpf.Views"
             xmlns:domain="clr-namespace:taskmaker_wpf.Domain"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             xmlns:viewmodels="clr-namespace:taskmaker_wpf.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:TargetsPanelViewModel}"
             mc:Ignorable="d" 
             xmlns:prism="http://prismlibrary.com/"
             d:DesignHeight="450" d:DesignWidth="200">
    <UserControl.Resources>
        <local:ISelectableTargetConverter
            x:Key="SelectableTargetConverter" />


        <DataTemplate
            x:Key="motorControlPanel"
            DataType="{x:Type viewmodels:MotorTargetState}">
            <Grid
                Margin="0, 4, 0, 4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Content="{Binding Name}"
                    />
                <Slider
                    x:Name="slider"
                    Grid.Column="1"
                    Grid.ColumnSpan="3"
                    LargeChange="1000"
                    SmallChange="100"
                    VerticalAlignment="Center"
                    Value="{Binding MotorValue, Mode=TwoWay}"
                    Maximum="{Binding Max}"
                    Minimum="{Binding Min}"
                    IsSnapToTickEnabled="True"
                    TickFrequency="1"
                    />
                <TextBox
                    Grid.Column="4"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="40"
                    Text="{Binding ElementName=slider, Path=Value, Mode=TwoWay}"
                    KeyDown="OnKeyDown">
                </TextBox>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <StackPanel
            Orientation="Vertical">

            <Grid
                Margin="0, 4, 0, 4"
                >
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Center" />
                        <Setter Property="Width" Value="auto" />
                    </Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="Margin" Value="2,0,2,0" />
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Maps" />
                <ComboBox
                    Grid.Row="0"
                    Grid.Column="1"
                    ItemsSource="{Binding Maps}"
                    SelectedItem="{Binding SelectedMap, Mode=OneWayToSource}" />
                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    Content="Add"
                    Command="{Binding AddCommand}" />
                
                <Label
                    Grid.Column="0"
                    Grid.Row="1"
                    Content="Targets" />
                <ComboBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Text="Select --Targets--"
                    IsEditable="True"
                    IsReadOnly="True"
                    ItemsSource="{Binding ValidTargets}">
                    <d:ComboBox.SelectedIndex>
                        0
                    </d:ComboBox.SelectedIndex>
                    <d:ComboBox.ItemsSource>
                        <x:Array Type="{x:Type sys:Object}">
                            <viewmodels:MotorTargetState Name="S0" MotorValue="100" Max="10000" Min="-10000"/>
                            <viewmodels:MotorTargetState Name="S1" MotorValue="100" Max="10000" Min="-10000"/>
                            <viewmodels:MotorTargetState Name="S2" MotorValue="100" Max="10000" Min="-10000"/>
                            <viewmodels:MotorTargetState Name="S3" MotorValue="100" Max="10000" Min="-10000"/>
                        </x:Array>
                    </d:ComboBox.ItemsSource>
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Orientation="Horizontal">
                                <CheckBox 
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding Path=IsSelected}"/>
                                <TextBlock
                                    Margin="10 0 0 0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Path=Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Content="Update"
                    Command="{Binding UpdateCommand}"
                    />

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Sources" />
                <ComboBox
                    Grid.Row="2"
                    Grid.Column="1"
                    ItemsSource="{Binding SourceStates}"
                    SelectedItem="{Binding SelectedSourceState, Mode=OneWayToSource}"
                    >
                    <ComboBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type viewmodels:SelectableSourceState}">
                            <StackPanel
                                Orientation="Horizontal">
                                <CheckBox 
                                    IsChecked="{Binding IsSelected}"/>
                                <TextBlock
                                    Text="{Binding Name}"
                                    />
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                    
                </ComboBox>
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Content="Init." 
                    Command="{Binding InitilizeCommand}"/>

                <Grid
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="20" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Column="0"
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Content="Tensor"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        />

                    <ItemsControl
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Column="1"
                        Grid.Row="0"
                        ItemsSource="{Binding Indices}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Text="{Binding Path=Length}">
                                </TextBlock>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Text="(0, 0)" />

                    <Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Content="Next" 
                        Command="{Binding}"/>
                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Content="Set"
                        Command="{Binding SetValueCommand}"/>
                </Grid>
            </Grid>

            <ItemsControl 
                Margin="0, 4, 0, 4"
                ItemsSource="{Binding TargetsOfSelectedMap}"
                ItemTemplate="{StaticResource motorControlPanel}">
                <d:ItemsControl.ItemsSource>
                    <x:Array Type="{x:Type sys:Object}">
                        <viewmodels:MotorTargetState Name="S0" MotorValue="100" Max="10000" Min="-10000"/>
                        <viewmodels:MotorTargetState Name="S1" MotorValue="100" Max="10000" Min="-10000"/>
                        <viewmodels:MotorTargetState Name="S2" MotorValue="100" Max="10000" Min="-10000"/>
                        <viewmodels:MotorTargetState Name="S3" MotorValue="100" Max="10000" Min="-10000"/>
                    </x:Array>
                </d:ItemsControl.ItemsSource>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
