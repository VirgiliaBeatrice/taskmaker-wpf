<UserControl x:Class="taskmaker_wpf.Views.TargetsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:w="clr-namespace:taskmaker_wpf.Views.Widget"
             xmlns:domain="clr-namespace:taskmaker_wpf.Domain"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             xmlns:vm="clr-namespace:taskmaker_wpf.ViewModels"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             d:DataContext="{d:DesignInstance Type=vm:RegionControlUIViewModel}"
             mc:Ignorable="d" 
             xmlns:prism="http://prismlibrary.com/"
             d:DesignHeight="450" d:DesignWidth="300">
    <UserControl.Resources>
        <Style TargetType="{x:Type Image}">
            <Setter Property="Width" Value="16" />
            <Setter Property="Height" Value="16" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel
            Margin="10"
            Orientation="Vertical">

            <DockPanel
                Margin="0 0 0 5"
                LastChildFill="True"
                HorizontalAlignment="Stretch">
                <Button
                    Name="btn0"
                    DockPanel.Dock="Left"
                    Click="ToggleButton_Click">
                    <Button.Content>
                        <Image
                            Width="16"
                            Height="16"
                            Source="../icons/expand_more_FILL0_wght400_GRAD0_opsz48.png" />
                    </Button.Content>
                </Button>
                <Popup
                    StaysOpen="False"
                    PlacementTarget="{Binding ElementName=btn0}"
                    x:Name="popup0"
                    Placement="Bottom"
                    AllowsTransparency="True"
                    >
                    <Border
                        BorderThickness="1"
                        Background="White"
                        Width="100"
                        Height="100"
                        >
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.2" />
                        </Border.Effect>
                        <ListBox 
                            x:Name="lbMaps"
                            ItemsSource="{Binding MapStates}"
                            SelectionChanged="lbMaps_SelectionChanged"/>
                    </Border>
                </Popup>

                <Button
                    DockPanel.Dock="Right"
                    Width="20"
                    Height="20"
                    Command="{Binding InitMapCommand}"
                    >
                    <Button.Content>
                        <Image 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="12"
                            Height="12"
                            Source="{svgc:SvgImage Source=/icons/start.svg}" />
                    </Button.Content>
                </Button>
                <Button
                    DockPanel.Dock="Right"
                    Width="20"
                    Height="20"
                    Click="Button_Click_2"
                    >
                    <Button.Content>
                        <Image 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="12"
                            Height="12"
                            Source="{svgc:SvgImage Source=/icons/refresh.svg}" />
                    </Button.Content>
                </Button>
                
                <Button
                    x:Name="btnAdd"
                    DockPanel.Dock="Right"
                    Command="{Binding AddMapCommand}" Width="20" Height="20"
                    >
                    <Button.Content>
                        <Image 
                            Source="{svgc:SvgImage Source=/icons/add.svg}" Width="12" Height="12"/>
                    </Button.Content>
                </Button>

                <Button
                    x:Name="btnUpdate"
                    DockPanel.Dock="Right"
                    Command="{Binding UpdateMapCommand}"
                    Width="20" Height="20"
                    >
                    <Button.Content>
                        <Image Source="{svgc:SvgImage Source=/icons/check.svg}" Width="12" Height="12" />
                    </Button.Content>
                </Button>
                <TextBox
                    VerticalAlignment="Stretch"
                    Text="{Binding ElementName=lbMaps, Path=SelectedItem}" />


            </DockPanel>

            <Expander
                BorderBrush="{x:Static SystemColors.ActiveBorderBrush}"
                BorderThickness="1"
                Margin="0 5 0 5"
                Header="Valid Inputs">
                <ItemsControl
                    Margin="2"
                    ItemsSource="{Binding ValidInputPorts}"
                    >
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                HorizontalAlignment="Right"
                                Margin="4"
                                Orientation="Horizontal">
                                <CheckBox 
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding Path=IsSelected, Mode=TwoWay}"/>
                                <TextBlock
                                    Margin="4 0 0 0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Path=Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Expander>

            <Expander
                BorderBrush="{x:Static SystemColors.ActiveBorderBrush}"
                BorderThickness="1"
                Margin="0 5 0 5"
                Header="ValidOutputs"
                >
                <ItemsControl
                    Margin="2"
                    ItemsSource="{Binding ValidOutputPorts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                HorizontalAlignment="Right"
                                Margin="4"
                                    Orientation="Horizontal">
                                <CheckBox 
                                    VerticalAlignment="Center"
                                    IsChecked="{Binding Path=IsSelected, Mode=TwoWay}"/>
                                <TextBlock
                                    Margin="4 0 0 0"
                                    VerticalAlignment="Center"
                                    Text="{Binding Path=Name}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Expander>

            <Expander
                BorderBrush="{x:Static SystemColors.ActiveBorderBrush}"
                BorderThickness="1"
                Margin="0 5 0 5"
                Header="Map > Motor Controllers">
                <ItemsControl
                    Margin="2"
                    ItemsSource="{Binding DisplayMotors}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:MotorState}">
                            <Expander
                            BorderBrush="{x:Static SystemColors.ActiveBorderBrush}"
                            BorderThickness="1"
                            Margin="4 4 4 4"
                            IsExpanded="True"
                            Header="{Binding Name}"
                            >
                                <Grid
                                Margin="4"
                                >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Slider
                                    Grid.Column="0"
                                    
                                    x:Name="slider"
                                    Value="{Binding Value[0]}"
                                    Maximum="{Binding Max}"
                                    Minimum="{Binding Min}"
                                    LargeChange="1000"
                                    SmallChange="100"
                                    IsSnapToTickEnabled="True"
                                        ValueChanged="slider_ValueChanged"
                                    />
                                    <TextBox 
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    Grid.Column="1"
                                    Text="{Binding ElementName=slider, Path=Value}"/>
                                </Grid>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Expander>

            <Expander
                BorderBrush="{x:Static SystemColors.ActiveBorderBrush}"
                BorderThickness="1"
                Margin="0 5 0 5"
                Header="Map > Ui Controllers">
                <ItemsControl
                    Margin="2"
                    ItemsSource="{Binding DisplayUis}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:ControlUiState_v1}">
                            <Expander
                            BorderBrush="{x:Static SystemColors.ActiveBorderBrush}"
                            BorderThickness="1"
                            Margin="0 4 0 4"
                            IsExpanded="True"
                            Header="{Binding Name}"
                            >
                                <StackPanel
                                    Focusable="True"
                                    >
                                    <Button 
                                        x:Name="btnOpenCompactUi"
                                        Content="ClickToOpen"
                                        Click="btnOpenCompactUi_Click"
                                        />
                                    <Popup
                                        PlacementTarget="{Binding ElementName=btnOpenCompactUi}"
                                        StaysOpen="False"
                                        >
                                        <Grid>
                                            <w:UiController
                                                Width="400"
                                                Height="400"
                                                UiState="{Binding .}"
                                                />
                                        </Grid>
                                    </Popup>
                                </StackPanel>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Expander>



            <!--
                <d:ItemsControl.ItemsSource>
                    <x:Array Type="{x:Type sys:Object}">
                        <vm:MotorState_v1 Name="S0" Value="100" Max="10000" Min="-10000"/>
                        <vm:MotorState_v1 Name="S1" Value="100" Max="10000" Min="-10000"/>
                        <vm:MotorState_v1 Name="S2" Value="100" Max="10000" Min="-10000"/>
                        <vm:MotorState_v1 Name="S3" Value="100" Max="10000" Min="-10000"/>
                    </x:Array>
                </d:ItemsControl.ItemsSource>
                    -->
        </StackPanel>
    </Grid>
</UserControl>
