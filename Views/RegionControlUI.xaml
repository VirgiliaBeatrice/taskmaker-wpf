<UserControl x:Class="taskmaker_wpf.Views.RegionControlUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:taskmaker_wpf.Views"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF" xmlns:viewmodels="clr-namespace:taskmaker_wpf.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:RegionControlUIViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <skia:SKElement
        Focusable="True"
        x:Name="skElement"
        PaintSurface="SKElement_PaintSurface"
        PreviewMouseDown="skElement_PreviewMouseDown"
        PreviewMouseUp="skElement_PreviewMouseUp"
        MouseDown="skElement_MouseDown"
        MouseUp="skElement_MouseUp">
        <skia:SKElement.InputBindings>
            <KeyBinding
                Key="F1"
                Command="{Binding ChangeModeCmd}"
                CommandParameter="ModeAdd"/>
        </skia:SKElement.InputBindings>

        <b:Interaction.Triggers>
            <b:EventTrigger EventName="MouseDown">
                <b:InvokeCommandAction
                    Command="{Binding MouseDownCmd}"
                    PassEventArgsToCommand="True"/>
            </b:EventTrigger>
            <b:EventTrigger EventName="MouseUp">
                <b:InvokeCommandAction
                    Command="{Binding MouseUpCmd}"
                    PassEventArgsToCommand="True"/>
            </b:EventTrigger>
            <b:EventTrigger EventName="MouseMove">
                <b:InvokeCommandAction
                    Command="{Binding MouseMoveCmd}"
                    PassEventArgsToCommand="True"/>
            </b:EventTrigger>
        </b:Interaction.Triggers>
    </skia:SKElement>
</UserControl>
