        </DockPanel>



        <StackPanel
            x:Name="statusBar"
            Orientation="Horizontal"
            HorizontalAlignment="Stretch"
            Background="DimGray"
            Grid.Row="1">
            <TextBlock 
                x:Name="keymapInfo"
                Margin="0 0 4 0"
                Text="{Binding Path=KeymapInfo}"/>
            <TextBlock 
                x:Name="statusMsg"
                Margin="4 0 4 0"
                Text="{Binding Path=StatusMsg}"/>
            <TextBlock 
                x:Name="systemInfo"
                Margin="4 0 4 0"
                Text="{Binding ElementName=complex, Path=Mode}"/>
        </StackPanel>
    </Grid>

</UserControl>
