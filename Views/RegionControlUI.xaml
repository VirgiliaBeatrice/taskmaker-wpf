<UserControl x:Class="taskmaker_wpf.Views.RegionControlUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:taskmaker_wpf.Views"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF" xmlns:viewmodels="clr-namespace:taskmaker_wpf.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:RegionControlUIViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0">
            
        </StackPanel>
        <skia:SKElement
            Grid.Row="1"
            Focusable="True"
            x:Name="skElement"
            PaintSurface="SKElement_PaintSurface"
            PreviewMouseDown="skElement_PreviewMouseDown"
            PreviewMouseUp="skElement_PreviewMouseUp"
            MouseDown="skElement_MouseDown"
            MouseUp="skElement_MouseUp">
            <skia:SKElement.InputBindings>
                <KeyBinding
                    Key="ESC"
                    Command="{Binding ChangeModeCmd}"
                    CommandParameter="ModeDefault"/>
                <KeyBinding
                    Key="D1"
                    Command="{Binding ChangeModeCmd}"
                    CommandParameter="ModeAdd"/>
                <KeyBinding
                    Key="D2"
                    Command="{Binding ChangeModeCmd}"
                    CommandParameter="ModeEdit"/>
                <KeyBinding
                    Key="D3"
                    Command="{Binding ChangeModeCmd}"
                    CommandParameter="ModeRemove"/>
            </skia:SKElement.InputBindings>

            <b:Interaction.Triggers>
                <b:EventTrigger EventName="MouseDown">
                    <b:InvokeCommandAction
                        Command="{Binding MouseDownCmd}"
                        PassEventArgsToCommand="True"/>
                </b:EventTrigger>
                <b:EventTrigger EventName="MouseUp">
                    <b:InvokeCommandAction
                        Command="{Binding MouseUpCmd}"
                        PassEventArgsToCommand="True"/>
                </b:EventTrigger>
                <b:EventTrigger EventName="MouseMove">
                    <b:InvokeCommandAction
                        Command="{Binding MouseMoveCmd}"
                        PassEventArgsToCommand="True"/>
                </b:EventTrigger>
            </b:Interaction.Triggers>
        </skia:SKElement>
        <StackPanel
            x:Name="statusBar"
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            Background="DimGray"
            Grid.Row="2">
            <TextBlock 
                x:Name="keymapInfo"
                Margin="4 0 4 0"
                Text="{Binding Path=KeymapInfo}"/>
            <TextBlock 
                x:Name="statusMsg"
                Margin="4 0 4 0"
                Text="{Binding Path=StatusMsg}"/>
            <TextBlock 
                x:Name="systemInfo"
                Margin="4 0 4 0"
                Text="{Binding Path=SystemInfo}"/>
        </StackPanel>
    </Grid>
    
</UserControl>
