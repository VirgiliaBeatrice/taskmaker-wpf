<Window x:Class="taskmaker_wpf.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:local="clr-namespace:taskmaker_wpf.Views"
        xmlns:viewmodels="clr-namespace:taskmaker_wpf.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:TestWindowViewModel}"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="home" UriSource="../icons/home.png"/>
            <BitmapImage x:Key="settings" UriSource="../icons/settings.png"/>
            <BitmapImage x:Key="control" UriSource="../icons/triangle.png"/>
            <BitmapImage x:Key="panel" UriSource="../icons/panel.png"/>

        </ResourceDictionary>
    </Window.Resources>

    
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Grid.Row="0"
            Orientation="Vertical">
            <StackPanel.Resources>
                <Style
                    TargetType="Image">
                    <Setter Property="Width" Value="20" />
                    <Setter Property="Height" Value="20" />
                </Style>
            </StackPanel.Resources>
            <Button
                Margin="4"
                Command="{Binding NavigateCommand}"
                CommandParameter="RegionHome"
                >
                <Image
                    Source="{StaticResource home}"/>
            </Button>
            <Button
                Margin="4"
                Command="{Binding NavigateCommand}"
                CommandParameter="RegionSettings"
                >
                <Image Source="{StaticResource settings}" />
            </Button>
            <Button
                Margin="4"
                Command="{Binding NavigateCommand}"
                CommandParameter="RegionControlUI">
                <Image Source="{StaticResource control}" />
            </Button>
            <Button
                Margin="4"
                Command="{Binding NavigateCommand}"
                CommandParameter="RegionMotor">
                <Image Source="{StaticResource panel}" />
            </Button>
        </StackPanel>
        <ContentControl
            BorderBrush="Blue"
            BorderThickness="4"
            Grid.Column="1"
            prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
