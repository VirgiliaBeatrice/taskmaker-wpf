<Window x:Class="taskmaker_wpf.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:local="clr-namespace:taskmaker_wpf.Views"
        xmlns:viewmodels="clr-namespace:taskmaker_wpf.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:TestWindowViewModel}"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0">View A</TextBlock>
        <Label Grid.Column="1" Content="Label" Width="100" Height="40"/>
        <Button Grid.Column="2" Content="Navigate" Command="{Binding Path=NavigateCommand}"
                CommandParameter="RegionA"
                Width="100"
                Height="20"
                />
        <ContentControl Grid.Column="3" prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
