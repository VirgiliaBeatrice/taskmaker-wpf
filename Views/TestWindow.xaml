<Window x:Class="taskmaker_wpf.Views.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:local="clr-namespace:taskmaker_wpf.Views"
        xmlns:viewmodels="clr-namespace:taskmaker_wpf.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:TestWindowViewModel}"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <BitmapImage x:Key="home" UriSource="../icons/home.png"/>
            <BitmapImage x:Key="settings" UriSource="../icons/settings.png"/>
            <BitmapImage x:Key="control" UriSource="../icons/triangle.png"/>
            <BitmapImage x:Key="panel" UriSource="../icons/panel.png"/>
        </ResourceDictionary>
    </Window.Resources>
    <!--
    <Window.InputBindings>
        <KeyBinding Key="F2" Command="{Binding TestCommand}" />


    </Window.InputBindings>
    -->
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel 
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Grid.Row="0" Orientation="Vertical">
            <Button
                Margin="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="30"
                Height="30"
                Command="{Binding NavigateCommand}"
                CommandParameter="RegionHome"
                >
                <Image Source="{StaticResource home}" />
            </Button>
            <Button
                Margin="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="30"
                Height="30"
                Command="{Binding NavigateCommand}"
                CommandParameter="RegionSettings"
                >
                <Image Source="{StaticResource settings}" />
            </Button>
            <Button
                Margin="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="30"
                Height="30"
                Command="{Binding NavigateCommand}"
                CommandParameter="RegionControlUI">
                <Image Source="{StaticResource control}" />
            </Button>
            <Button
                Margin="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="30"
                Height="30"
                Command="{Binding NavigateCommand}"
                CommandParameter="RegionMotor">
                <Image Source="{StaticResource panel}" />
            </Button>
            <TextBlock Text="Test">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseDown">
                        <prism:InvokeCommandAction Command="{Binding TestCmd}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </TextBlock>
        </StackPanel>
        <ContentControl
            BorderBrush="Blue"
            BorderThickness="4"
            Grid.Column="1"
            prism:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Window>
