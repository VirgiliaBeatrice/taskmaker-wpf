<UserControl x:Class="taskmaker_wpf.Views.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:taskmaker_wpf.Views"
             xmlns:widget="clr-namespace:taskmaker_wpf.Views.Widget"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <widget:NodeRelationViewer 
            Panel.ZIndex="0"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            d:NodeRelations="{d:SampleData ItemCount=3}">
        </widget:NodeRelationViewer>
        <widget:MultiView
            Panel.ZIndex="-1"
            MaxColumnCount="2"
            d:ItemsSource="{d:SampleData ItemCount=4}"/>
    </Grid>
</UserControl>
