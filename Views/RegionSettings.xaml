<UserControl x:Class="taskmaker_wpf.Views.RegionSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:taskmaker_wpf.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <GroupBox>
            <GroupBox.Header>Comm</GroupBox.Header>
            <Grid Margin="10" Grid.Row="0" MaxHeight="24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" >Serial Port</Label>
                <ComboBox Grid.Column="1" Margin="10 0 10 0"/>
                <Button Grid.Column="2" Margin="4 0 4 0">
                    Connect
                </Button>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
