<UserControl x:Class="taskmaker_wpf.Views.Widget.Inspector"
             x:Name="inspector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:taskmaker_wpf.Views.Widget"
             xmlns:vm="clr-namespace:taskmaker_wpf.ViewModels"
             xmlns:m="clr-namespace:taskmaker_wpf.Model.Data"
             xmlns:widgets="clr-namespace:taskmaker_wpf.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <UserControl.Resources>
        <DataTemplate
            x:Key="nodeDataTemplate"
            DataType="{x:Type widgets:NodeWidget}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Row="0"
                    Grid.ColumnSpan="5"
                    Content="NodeData"
                    />
                <Label 
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Location" />
                <Label
                    Grid.Row="1"
                    Grid.Column="1"
                    Content="X" />
                <TextBox
                    Grid.Row="1"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Text="{Binding Path=DataContext.Location.X}"/>
                <Label 
                    Grid.Row="1"
                    Grid.Column="3"
                    Content="Y" />
                <TextBox 
                    Grid.Row="1"
                    Grid.Column="4"
                    VerticalAlignment="Center"
                    Text="{Binding Path=DataContext.Location.Y}"/>

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Uid"/>
                <TextBlock
                    VerticalAlignment="Center"
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="4"
                    Text="{Binding Path=DataContext.Uid}" />

                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="IsSet"/>
                <CheckBox
                    Grid.Row="3"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    IsChecked="{Binding DataContext.IsSet}" />
            </Grid>

        </DataTemplate>
        
        <local:InspectorTargetTemplateSelector
            NodeDataTemplate="{StaticResource nodeDataTemplate}"
            x:Key="inspectorTargetTemplateSelector"/>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <ContentPresenter
                Content="{Binding ElementName=inspector, Path=InspectedWidget}"
                ContentTemplateSelector="{StaticResource inspectorTargetTemplateSelector}"
                >
                <d:ContentPresenter.Content>
                    <widgets:NodeWidget />
                </d:ContentPresenter.Content>
            </ContentPresenter>
        </StackPanel>
    </Grid>
</UserControl>
